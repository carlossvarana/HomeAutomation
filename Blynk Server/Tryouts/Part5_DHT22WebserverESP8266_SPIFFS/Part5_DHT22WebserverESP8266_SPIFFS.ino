void setupWiFi()
{
  WiFi.mode(WIFI_AP);
  WiFi.softAP("La papa caliente", "12345678");
}

void initHardware()
{
  Serial.begin(115200);
  pinMode(LED_PIN, INPUT);
  // Don't need to set ANALOG_PIN as input, 
  // that's all it can be.
}
